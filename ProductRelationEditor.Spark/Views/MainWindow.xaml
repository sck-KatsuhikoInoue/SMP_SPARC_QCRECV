<UserControl x:Class="ProductRelationEditor.Spark.Views.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:v="clr-namespace:ProductRelationEditor.Spark.Views"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <UserControl.Resources>
        <Style x:Key="HeaderStyleGreen" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="LightGreen"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
        <Style x:Key="HeaderStyleBlue" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <StackPanel Grid.Column ="1" Orientation="Horizontal">
            <Label x:Name="lbl_GID_t" Content="ログインユーザ"  Width="80"/>
            <Label x:Name="lbl_GID" Content="{Binding WindowsUserName}" Width="80"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2"  Orientation="Horizontal">
            <Label x:Name="label1" Content="TEC"  Width="50"/>
            <ComboBox x:Name="cmbTecKind" Width="150" ItemsSource="{Binding TecKindList}" SelectedItem="{Binding SelectedTecKind, Mode=TwoWay}"/>
            <Label x:Name="label2" Content="カテゴリ" Width="50"/>
            <ComboBox x:Name="cmbCategpry" Width="150" ItemsSource="{Binding CategoryList}" SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"/>
            <Label x:Name="label3" Content="装置" Width="50"/>
            <ComboBox x:Name="cmbEquipment" Width="150" ItemsSource="{Binding EquipmentList}" SelectedItem="{Binding SelectedEquipment, Mode=TwoWay}"/>
            <Label x:Name="label4" Content="グループ名" Width="60"/>
            <ComboBox x:Name="cmbGroupName" Width="150" ItemsSource="{Binding GroupNameList}" SelectedItem="{Binding SelectedGroupName, Mode=TwoWay}"/>
            <Label x:Name="label5" Content="" Width="80"/>
            <Button x:Name="btnSearch" Content="データ取得" Width="120" Command="{Binding FetchDataCommand}"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2"  Orientation="Horizontal">
            <Button x:Name="btnDisplay" Content="SPARC(全/最小)" Width="120"  Click="BtnDisplay_Click"/>
            <Button x:Name="btnCopy" Content="ISTAR複製" Width="120" Command="{Binding CopyCommand}"/>
            <Button x:Name="btnSendSW" Content="転送On/Off" Width="120" Command="{Binding SendCommand}"/>
        </StackPanel>

        <StackPanel Grid.Row="12" Grid.Column ="1" Orientation="Horizontal">
            <Label x:Name="label6" Content="" Width="65"/>
            <Button Content="登録" Width="120" Command="{Binding RegisterDataCommand}"/>
        </StackPanel>

        <DataGrid x:Name="GrMaster" Grid.Row="6" Grid.RowSpan="7"
                  ItemsSource="{Binding Items}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  PreviewKeyDown="GrMaster_PreviewKeyDown"
                  SelectionUnit="CellOrRowHeader"
                  SelectionMode="Extended">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="colTecKind" Header="TEC_KIND" Binding="{Binding TEC_KIND}" IsReadOnly="True"
                                    Visibility="{Binding DataContext.ItemVisibility, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    HeaderStyle="{StaticResource HeaderStyleBlue}"/>
                <DataGridTextColumn x:Name="colCCATEGORY" Header="CCATEGORY" Binding="{Binding CCATEGORY}" IsReadOnly="True" 
                                    HeaderStyle="{StaticResource HeaderStyleBlue}"/>
                <DataGridTextColumn x:Name="colPRODUCT" Header="PRODUCT" Binding="{Binding PRODUCT}" IsReadOnly="True" 
                                    HeaderStyle="{StaticResource HeaderStyleBlue}"/>
                <DataGridTextColumn x:Name="colGNAME" Header="GNAME" Binding="{Binding GNAME}" IsReadOnly="True" 
                                    HeaderStyle="{StaticResource HeaderStyleBlue}"/>
                <DataGridTextColumn x:Name="colEQP_ID" Header="EQP_ID" Binding="{Binding EQP_ID}" IsReadOnly="True"
                                    HeaderStyle="{StaticResource HeaderStyleBlue}"/>
                <DataGridTextColumn x:Name="colTIMESERIES_SEQ_NO" Header="TIMESERIES_SEQ_NO" Binding="{Binding TIMESERIES_SEQ_NO}" IsReadOnly="True" 
                                    HeaderStyle="{StaticResource HeaderStyleBlue}"/>
                <DataGridTextColumn x:Name="colM_PROCESS_NAME" Header="M_PROCESS_NAME" Binding="{Binding M_PROCESS_NAME}" IsReadOnly="True" 
                                    HeaderStyle="{StaticResource HeaderStyleBlue}"/>
                <DataGridTextColumn x:Name="colM_WORK_NAME" Header="M_WORK_NAME" Binding="{Binding M_WORK_NAME}" IsReadOnly="True" 
                                    HeaderStyle="{StaticResource HeaderStyleBlue}"/>
                <DataGridTextColumn x:Name="colM_FLD_ID" Header="M_FLD_ID" Binding="{Binding M_FLD_ID}" IsReadOnly="True" 
                                    HeaderStyle="{StaticResource HeaderStyleBlue}"/>
                <DataGridTextColumn x:Name="colM_WORK_CODE" Header="M_WORK_CODE" Binding="{Binding M_WORK_CODE}" IsReadOnly="True" 
                                    HeaderStyle="{StaticResource HeaderStyleBlue}"/>
                <DataGridTextColumn x:Name="colDCITEM_NM" Header="DCITEM_NM" Binding="{Binding DCITEM_NM}" IsReadOnly="True" 
                                    HeaderStyle="{StaticResource HeaderStyleBlue}"/>
                <DataGridTextColumn x:Name="colDCITEM_UNIT" Header="DCITEM_UNIT" Binding="{Binding DCITEM_UNIT}" IsReadOnly="True" 
                                    HeaderStyle="{StaticResource HeaderStyleBlue}"/>
                <DataGridTextColumn x:Name="colCTITLE" Header="CTITLE" Binding="{Binding CTITLE}" IsReadOnly="True" 
                                    HeaderStyle="{StaticResource HeaderStyleBlue}"/>
                <DataGridCheckBoxColumn Header="ISTAR登録" Binding="{Binding SENDFLG}" 
                                    HeaderStyle="{StaticResource HeaderStyleGreen}"/>
                <DataGridTextColumn Header="大項目" Binding="{Binding LARGE_GROUP}" 
                                    HeaderStyle="{StaticResource HeaderStyleGreen}"/>
                <DataGridTextColumn Header="小分類" Binding="{Binding SMALL_GROUP}"
                                    HeaderStyle="{StaticResource HeaderStyleGreen}"/>
                <DataGridTextColumn Header="測定項目" Binding="{Binding DISPLAY_NAME}"
                                    HeaderStyle="{StaticResource HeaderStyleGreen}"/>
                <DataGridTextColumn Header="チャンバー名" Binding="{Binding CHAMBER_NAME}"
                                    HeaderStyle="{StaticResource HeaderStyleGreen}"/>
                <DataGridCheckBoxColumn Header="POINT転送フラグ" Binding="{Binding POINTFLG}"
                                    HeaderStyle="{StaticResource HeaderStyleGreen}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</UserControl>

